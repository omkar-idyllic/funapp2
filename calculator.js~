var MAX_NUM = 100

var a = {
	getCalculationFunction: function(num1, num2 , operation){
		switch(operation) {
			case 'sum': 
				return num1 + num2;
				break;

			case 'subtraction':
				return num1 - num2;
				break;

			case 'division': 
				return num1 / num2;
				break;	

			case 'multiplication':
				return num1 * num2;
				break;

			case 'mod':
				return num1 % num2;
				break;
		}
	}	
}			

module.exports = a;
